<section class="es-poster swiper-container">
  <div class="swiper-wrapper">
    {% for i in 1..3 %}
      {% set carouselground = _context['carousel' ~ i ~ 'ground']%}
      {% set title1 = _context['carousel' ~ i ~ 'title1']%}
      {% set title2 = _context['carousel' ~ i ~ 'title2']%}
      {% set subtitle1 = _context['carousel' ~ i ~ 'subtitle1']%}
      {% set subtitle2 = _context['carousel' ~ i ~ 'subtitle2']%}
      {% set carouselbanner =  _context['carousel' ~ i ~'banner'] %}
      {% set carouselbackground = _context['carousel' ~ i ~ 'background']%}
      <div class="swiper-slide" style="background: {{carouselbackground[0].value}};">

          <a href="{{ carouselground[0].href|default('') }}" target="{{ carouselground[0].target }}" > <img class="img-responsive" src="{{ carouselbanner[0].src|default('') }}">
          </a>

      </div>
    {% endfor %}
  </div>
  <div class="swiper-pager"></div>
</section>